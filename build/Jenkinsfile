pipeline {
    agent any

    environment {
        DOCKER_DEV_REPO = ' irfan170/development'
        DOCKER_PROD_REPO = ' irfan170/production'
        DOCKER_HUB_CREDENTIALS_ID = 'docker'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the Git repository
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    // Build the Docker image
                    dockerImage = docker.build("my-react-app:${env.BRANCH_NAME}-${env.BUILD_ID}")
                }
            }
        }

        stage('Push to Dev Repo') {
            when {
                branch 'dev'
            }
            steps {
                script {
                    // Login to Docker Hub and push to dev repository
                    docker.withRegistry('https://index.docker.io/v1/', "${DOCKER_HUB_CREDENTIALS_ID}") {
                        dockerImage.push('latest')
                        dockerImage.push("${env.BUILD_ID}")
                    }
                }
            }
        }

        stage('Push to Prod Repo') {
            when {
                branch 'master'
            }
            steps {
                script {
                    // Login to Docker Hub and push to prod repository
                    docker.withRegistry('https://index.docker.io/v1/', "${DOCKER_HUB_CREDENTIALS_ID}") {
                        dockerImage.push('latest')
                        dockerImage.push("${env.BUILD_ID}")
                    }
                }
            }
        }
    }

    post {
        always {
            // Clean up the workspace
            cleanWs()
        }
    }
}

