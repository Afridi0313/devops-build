pipeline {
    agent any

    environment {
        // Define environment variables
        DOCKER_HUB_REPO = 'irfan170/development'
        DOCKER_HUB_CREDENTIALS_ID = 'docker'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the Git repository
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    // Build the Docker image
                    dockerImage = docker.build("${DOCKER_HUB_REPO}:${env.BRANCH_NAME}-${env.BUILD_ID}")
                }
            }
        }

        stage('Push') {
            steps {
                script {
                    // Login to Docker Hub
                    docker.withRegistry('https://index.docker.io/v1/', "${DOCKER_HUB_CREDENTIALS_ID}") {
                        // Push the Docker image to Docker Hub
                        dockerImage.push("${env.BRANCH_NAME}-${env.BUILD_ID}")
                        dockerImage.push("latest")
                    }
                }
            }
        }

        stage('Clean Up') {
            steps {
                // Remove the Docker image from the local machine
                sh "docker rmi ${DOCKER_HUB_REPO}:${env.BRANCH_NAME}-${env.BUILD_ID}"
            }
        }
    }

    post {
        always {
            // Clean the workspace after the build
            cleanWs()
        }
    }
}

